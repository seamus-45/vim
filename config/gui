" vim: set filetype=vim:

set guioptions-=m " убираем меню
set guioptions-=e " убираем вкладки GUI делаем их как в консоли
set guioptions-=T " убираем тулбар
set guioptions-=r " убираем полосы прокрутки справа
set guioptions-=R
set guioptions-=L " убираем полосы прокрутки слева
set guioptions-=l
set guicursor=a:blinkon0 " настройка курсора
set cursorline " подсвечивать текущую строку
set mousemodel=popup " правая кнопка мыши вызывает меню
" airline/powerline (install fonts from: https://github.com/powerline/fonts, https://github.com/Lokaltog/powerline-fonts)
set guifont=Droid\ Sans\ Mono\ for\ Powerline\ 11

" скрываем левые меню
let no_buffers_menu=1

set lines=50 columns=125 " размеры окна
