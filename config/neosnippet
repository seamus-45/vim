" vim: set filetype=vim:

" выключить основные сниппеты
let g:neosnippet#disable_runtime_snippets = {
\   '_' : 1,
\ }

" поддержка сниппетов для salt
let g:neosnippet#snippets_directory = [$HOME . "/.vim/vim-snippets-salt/snippets/"]

" версия сниппетов
let g:neosnippet#scope_aliases = {}
let g:neosnippet#scope_aliases['sls'] = 'sls-0.17.5'

" запретить AutoComplPop.
let g:acp_enableAtStartup = 0

" использовать neocomplete.
let g:neocomplete#enable_at_startup = 1

" использовать smartcase.
let g:neocomplete#enable_smart_case = 1
