" disable loading plugins
" set noloadplugins

" If the text sent to the pager is smaller than the terminal window, 
" then it will be displayed without vim as text. 
let vimpager_passthrough = 1

" no x11 connection, a bit faster startup
let vimpager_disable_x11 = 1

" make cursor line will always be in the middle of the window
let vimpager_scrolloff = 999

" To disable the use of AnsiEsc.vim
let vimpager_disable_ansiesc = 1
